@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Virtual Art Museum!</h1>
    <p>Explore digital exhibits, submit your own artwork, or help curate the collection.
        Whether you're an artist or a curator, there's a place for you here.</p>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Submit Artwork</h5>
                    <p class="card-text">Artists can upload their work and receive feedback from curators.</p>
                    <i class="bi bi-brush" style="font-size: 2rem;"></i>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Review Gallery</h5>
                    <p class="card-text">Admins can review submissions and curate the digital exhibit.</p>
                    <i class="bi bi-eye" style="font-size: 2rem;"></i>
                </div>
            </div>
        </div>
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="mt-3">
            <a class="btn btn-success me-2" asp-controller="Account" asp-action="Login">Log In</a>
            <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Register">Register</a>
        </div>

        <p><strong>Logged in as:</strong> @User.Identity.Name</p>

        @if (User.IsInRole("Artist"))
        {
            <p><a class="btn btn-primary" href="/Artworks/Create">Submit New Artwork</a></p>
            <p><a class="btn btn-info" href="/Artworks/MySubmissions">View Your Submissions</a></p>
        }
        else if (User.IsInRole("Admin"))
        {
            <p><a class="btn btn-warning" href="/Artworks/ReviewDashboard">Review Submissions</a></p>
            <p><a class="btn btn-secondary" href="/Users/Manage">Manage Users</a></p>
        }
        else
        {
            <p>Thanks for logging in! Feel free to explore the gallery.</p>
        }
    }
    else
    {
        <p><a class="btn btn-success" href="/Identity/Account/Login">Log in</a> or <a class="btn btn-outline-primary" href="/Identity/Account/Register">Register</a> to participate.</p>
    }

    <hr />
    <p>Want to learn more about how this app was built? Check out <a href="https://learn.microsoft.com/aspnet/core">ASP.NET Core documentation</a>.</p>
</div>